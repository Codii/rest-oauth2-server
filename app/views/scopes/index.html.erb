<h3>Show Scopes</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Values</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scopes.each do |scope| %>
  <tr>
    <td><%= scope.name %></td>
    <td><%= scope.values.join(", ") %></td>
    <td><%= link_to 'Show', scope %></td>
  </tr>
<% end %>
</table>

