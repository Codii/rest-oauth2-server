<html>
  <head></head>
  <body>

    <h1>Sign Up</h1>
    <% if admin_does_not_exist %>
      <h3 style="color: red">No admin existing. Fill the form and create the first admin</h3>
    <% end %>

    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p>
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </p>
      <p class="button"><%= f.submit %></p>
    <% end %>

  </body>
</html>

